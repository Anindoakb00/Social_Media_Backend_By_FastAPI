# Copy this file to `.env` for local development (DO NOT commit secrets)
# Or set these variables in your hosting provider (Render, Fly, Railway, etc.)

DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_NAME=fastapi
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=yourpassword
SECRET_KEY=replace-with-a-secure-random-value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Alternatively you can set a single DATABASE_URL provided by Render/Heroku/Railway
# DATABASE_URL=postgresql://user:password@host:5432/dbname
